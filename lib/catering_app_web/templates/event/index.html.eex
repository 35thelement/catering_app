<h1>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  <%= for event <- @events do %>
  <tr>
    <td><%= event.name %></td>
  </tr>
  <% end %>
</tbody>
</table>
<%= if @current_user != nil and not @current_user.is_caterer do %>
<span><%= link "New Event", to: Routes.event_path(@conn, :new) %></span>
<% end %>

<h1>Show Event</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @event.name %>
  </li>

  <li>
    <strong>Approved:</strong>
    <%= @event.approved %>
  </li>

  <li>
    <strong>Caterer turn:</strong>
    <%= @event.caterer_turn %>
  </li>

  <li>
    <strong>Preferences:</strong>
    <%= @event.preferences %>
  </li>

  <li>
    <strong>Feedback:</strong>
    <%= @event.feedback %>
  </li>

  <li>
    <strong>Day:</strong>
    <%= @event.day %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.event_path(@conn, :edit, @event) %></span>
<span><%= link "Back", to: Routes.event_path(@conn, :index) %></span>
